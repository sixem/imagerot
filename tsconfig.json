{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./lib",
      "rootDir": "./typescript",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
  },
  "include": [
      "typescript/**/*"
  ]
}
